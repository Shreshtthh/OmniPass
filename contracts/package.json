{
  "name": "omnipass-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for OmniPass cross-chain credential system",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:zetachain-testnet": "hardhat run scripts/deploy.js --network zetachain_testnet",
    "deploy:zetachain": "hardhat run scripts/deploy.js --network zetachain_mainnet",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:bsc-testnet": "hardhat run scripts/deploy.js --network bsc_testnet",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:bsc-testnet": "hardhat verify --network bsc_testnet",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test",
    "setup-testnet": "hardhat setup-testnet",
    "lint": "solhint 'src/**/*.sol'",
    "lint:fix": "solhint 'src/**/*.sol' --fix",
    "prettier": "prettier --write 'src/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "flatten": "hardhat flatten src/OmniPassCredential.sol > flattened/OmniPassCredential_flat.sol"
  },
  "keywords": [
    "defi",
    "cross-chain",
    "credentials",
    "zetachain",
    "reputation",
    "access-control"
  ],
  "author": "OmniPass Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@openzeppelin/hardhat-upgrades": "^3.2.0",
    "dotenv": "^16.6.1",
    "hardhat": "^2.22.5",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.1",
    "solidity-coverage": "^0.8.12"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@zetachain/protocol-contracts": "^6.0.0"
  }
}
